#!/bin/sh

# INSTYLE="--prompt=\"ü¶Å >\""

new() {
	git init
	gum confirm "Add a remote ?" && REMOTE="YES" || REMOTE="NO"
	if [ $REMOTE = "YES" ]; then
		{
			ORIGIN=$(gum input --value "origin" --placeholder "Name of the remote repo" --prompt="ü¶Å > ");
			REMOTE=$(gum input --value "" --placeholder "Link to remote repo" --prompt="ü¶Å > ");
			git remote add $ORIGIN $REMOTE
		}
	fi
}

commit() {
	gum confirm "Use Git Add * ?" && git add -A
	TYPE=$(gum choose "ü©π Fix" "‚ö° Feat" "üìò Docs" "üíÑ Style" "ü™Ñ Refactor" "üîß Test" "‚ùå Revert" "üßº Clean" --cursor="ü¶Å " --item.foreground 49)
	SUMMARY=$(gum input --value "$TYPE: " --placeholder "Commit Message" --prompt="ü¶Å > ")
	gum confirm "Commit changes ?" && git commit -m "$SUMMARY"
}

push() {
	BRANCH=$(gum input --value "origin master" --placeholder "Remote name and Branch" --prompt="ü¶Å > ")
	gum confirm "Push changes to $BRANCH ?" && gum spin -s points --title "Pushing to $BRANCH" -- git push -u $BRANCH
}

grm() {
	REMOVING=$(gum input --placeholder "Files to remove" --prompt="ü¶Å > ")
	git rm $REMOVING
}

main() {
	MENU=$(gum choose "New" "Remove" "Commit" "Push" "Exit" --cursor="ü¶Å " --item.foreground 49);

	if [ "$MENU" = "New" ]; then
		{
			new
			main
		}
	elif [ "$MENU" = "Remove" ]; then
		{
			grm
			main
		}
	elif [ "$MENU" = "Commit" ]; then
		{
			commit
			main
		}
	elif [ "$MENU" = "Push" ]; then
		{
			push
			main
		}
	else
		{
			exit
		}
	fi
}

selecting() {
	if [ "$*" = "new" ]; then
		new
	elif [ "$*" = "rm" ]; then
		grm
	elif [ "$*" = "commit" ]; then
		commit
	elif [ "$*" = "push" ]; then
			push
	else
		echo "Commands : "
		echo "new"
		echo "rm"
		echo "commit"
		echo "push"
	fi
}


if [ $# = 0 ]; then
	{
		gum style --foreground 49 --border-foreground 212 --border rounded --align center --padding "0 1" 'Lion Git 0.1'
		main
	}
elif [ $# = 1 ]; then
	selecting $*
else
	{
		echo "Usage : lgit"
		echo "Or    : lgit <git command>"
		echo ""
		echo "Commands : "
		echo "new"
		echo "rm"
		echo "commit"
		echo "push"
	}
fi
